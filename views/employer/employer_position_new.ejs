<% layout('../layout/layout') -%>
	<h1>Create new position</h1>
	<div id="create_position_from_wrapper">
		
		<form id="position_employer_addition_form" class="form-horizontal" action="" method="post" autocomplete="on" onsubmit="return false">
			
			<div id="form_element_wrapper">
	            <label id="name_label">
	            	Name
	            </label>

	            <input type="text" name="name" id="input_name_new">
            </div>

	        <div id="form_element_wrapper">   
	            <label id="description_label">
	            	Description
	            </label>

	            <input type="textarea" name="description" id="input_description_new">
            </div>

            <div id="form_element_wrapper">
	            <label id="requirements_label">
	            	Requirements
	            </label>

	            <input type="textarea" name="requirements" id="input_requirements_new">
            </div>

            <div id="form_element_wrapper">
	            <label id="salary_label">
	            	Salary
	            </label>

	            <input type="textarea" name="salary" id="input_salary_new">
            </div>

			<div id="form_element_wrapper">
	            <label id="location_label">
	            	Education
	            </label>

	            <input type="textarea" name="location" id="input_location_new">
            </div>

		</form>
	</div>

<% stylesheet('/stylesheets/client/employer.css') -%>

