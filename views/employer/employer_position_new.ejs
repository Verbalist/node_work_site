<% layout('../layout/layout') -%>
	<h1>Create new position</h1>	
	<div id="create_position_from_wrapper">	
		<form id="position_employer_addition_form" class="form-horizontal" action="" method="post" autocomplete="on" onsubmit="createPosition();return false">
			
			<div class="col-lg-12 well well-pd-sm">
    		<div id="form_element_wrapper" class = "control-group row">
                <div class="col-md-2">
                    <label id="name_label" class="control-label" for="input_name">Name</label>
                </div>
                <div class="controls col-md-10" >
                <input type="text" name="name" id="input_name" placeholder="" name="input_name" class="form-control input">
                 </div> 
            </div>

            <div id="form_element_wrapper" class = "control-group row">
                <div class="col-md-2">
                    <label id="description_label" class="control-label" for="input_description">Description</label>
                </div>
                <div class="controls col-md-10" >
                <input type="text" name="description" id="input_description" placeholder="" name="input_name" class="form-control input" >
                 </div> 
            </div>


            <div id="form_element_wrapper" class = "control-group row">
                <div class="col-md-2">
                    <label class="control-label" for="requirements_label">
                    	Requirements
                    </label>
                </div>
                <div class="controls col-md-10" >
                <input type="textarea" name="requirements" id="input_skills" class="form-control input" >
                 </div> 
            </div>
     
