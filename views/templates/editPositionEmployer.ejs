<script type="text/html" id="editPositionEmployer">

		<form id="edit_position_settings_form" class="form-horizontal" action="" method="post" autocomplete="on"
                  onsubmit="return false">
			
			<div id="form_element_wrapper">
	            <label id="name_label">
	            	Name
	            </label>

	            <input type="text" name="name" id="input_name" value="{{name}}">
            </div>

	        <div id="form_element_wrapper">   
	            <label id="description_label">
	            	Description
	            </label>

	            <input type="textarea" name="description" id="input_description" value="{{description}}">
            </div>

            <div id="form_element_wrapper">
	            <label id="requirements_label">
	            	Requirements
	            </label>

	            <input type="textarea" name="requirements" id="input_requirements" value="{{requirements}}">
            </div>


			<div id="form_element_wrapper">
	            <label id="salary_label">
	            	Salary
	            </label>

	            <input type="textarea" name="salary" id="input_salary" value="{{salary}}">
            </div>

            <div id="form_element_wrapper">
	            <label id="location_label">
	            	Location
	            </label>

	            <input type="textarea" name="experience" id="location_experience" value="{{location}}">
            </div>
		</form>
 
	    
</script>