<% layout('../layout/layout') -%>
<h1>Create new resume</h1>
<div id="create_resume_from_wrapper">
	<form id="resume_employee_addition_form" class="form-horizontal" autocomplete="on"
              onsubmit="addResumeEmployee();return false">
		
		<div id="form_element_wrapper">
            <label id="name_label">
            	Name
            </label>

            <input type="text" name="name" id="input_name_new">
        </div>

        <div id="form_element_wrapper">   
            <label id="description_label">
            	Description
            </label>

            <input type="textarea" name="description" id="input_description_new">
        </div>

        <div id="form_element_wrapper">
            <label id="skills_label">
            	Skills
            </label>

            <input type="textarea" name="skills" id="input_skills_new">
        </div>

        <div id="form_element_wrapper">
            <label id="experience_label">
            	Experience
            </label>

            <input type="textarea" name="experience" id="input_experience_new">
        </div>

		<div id="form_element_wrapper">
            <label id="education_label">
            	Education
            </label>

            <input type="textarea" name="education" id="input_education_new">
        </div>


		<div id="form_element_wrapper">
            <label id="salary_label">
            	Salary
            </label>

            <input type="textarea" name="salary" id="input_salary_new">
        </div>

         <div id="submit_resume_new_wrapper" class="form-group">
             <div class="">
                <button id="submit_resume_new" name="submit_resume" class="btn btn-info" type="submit">
                    <span class=""></span> Save
                </button>
            </div>
        </div>
	</form>
</div>

<% stylesheet('/stylesheets/client/employee.css') -%>

<% script('/javascripts/client/employee.js') -%>   
<% script('/javascripts/view/employee.js') -%>   